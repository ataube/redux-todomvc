{
  "extends": "reactjs",
  "rules": {
    "valid-jsdoc": 2,
    // Disable until Flow supports let and const
    "no-var": 0,
    "react/jsx-uses-react": 1,
    "react/jsx-no-undef": 2,
    "react/wrap-multilines": 2,
    "func-names": 0,
    "init-declarations": 0,
    "no-use-before-define": [2, {"functions": false, "classes": true}],
    "semi": [2, "never"]
  },
  "plugins": [
    "react"
  ]
}
